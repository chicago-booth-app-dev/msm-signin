<div>
  <div>
    <h1>
      <%= User.where(:id => session.fetch(:user_id)).first.first_name.capitalize %>'s Bookmarks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <form action="/insert_bookmark" method="post">
      <input type="hidden" id="<%= session.fetch(:user_id) %>" name="query_user_id">
        
      <select id="movie_id_box" name="query_movie_id">
        <% Movie.all.each do |movie| %>
          <option value="<%= movie.id %>"><%= movie.title %></option>
        <% end %>
      </select>

      <button>
        Bookmark this movie!
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>
        <td>
          <%= a_bookmark.id %>
        </td>

        <td>
          <%= a_bookmark.user_id %>
        </td>

        <td>
          <%= a_bookmark.movie_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/bookmarks/<%= a_bookmark.id %>">
            Show details
          </a>
        </td>

        <td>
          <a href="/delete_bookmark/<%= a_bookmark.id %>">
            Un-bookmark
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
